---
import { LinkCard } from "@astrojs/starlight/components";
import LabIcon from "./LabIcon.astro";

const masteries = [
  {
    title: "üé® Frontend High-End",
    description:
      "M√°s all√° de los componentes: efectos complejos, animaciones premium y tooling de √∫ltima generaci√≥n.",
    href: "/frontend/intro/",
    icon: "frontend",
  },
  {
    title: "‚öôÔ∏è Backend & AI",
    description:
      "Arquitecturas escalables, integraciones con IA y la l√≥gica robusta detr√°s de flujos de trabajo modernos.",
    href: "/backend/intro/",
    icon: "backend",
  },
  {
    title: "üöÄ DevOps & Infra",
    description:
      "Domina el despliegue, la seguridad y la terminal. Infraestructura pensada para el rendimiento puro.",
    href: "/devops/intro/",
    icon: "devops",
  },
  {
    title: "üõ†Ô∏è Tools & Elite Workflows",
    description:
      "Mis dotfiles, configuraciones de Warp/Terminal y las herramientas que multiplicar√°n tu productividad.",
    href: "/tools-labs/intro/",
    icon: "tools",
  },
];
---

<div class="mastery-grid">
  {
    masteries.map((m, i) => (
      <a href={m.href} class={`mastery-card mastery-card--${i}`}>
        <div class="card-content">
          <div class="card-header">
            <div class="icon-container">
              <LabIcon name={m.icon as any} size="32px" />
            </div>
            <h3>{m.title}</h3>
          </div>
          <p>{m.description}</p>
        </div>
        <div class="card-arrow">‚Üí</div>
      </a>
    ))
  }
</div>

<style>
  /* Bento grid: 3 columnas, 2 filas
     [  Frontend (2 cols)  ] [ Backend ]
     [ DevOps ] [  Tools (2 cols)      ]
  */
  .mastery-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: auto auto;
    gap: 1.25rem;
    margin: 2rem 0;
  }

  /* Frontend: cols 1-2, fila 1 */
  .mastery-card--0 { grid-column: 1 / 3; }

  /* Backend: col 3, fila 1 */
  .mastery-card--1 { grid-column: 3 / 4; }

  /* DevOps: col 1, fila 2 */
  .mastery-card--2 { grid-column: 1 / 2; }

  /* Tools: cols 2-3, fila 2 */
  .mastery-card--3 { grid-column: 2 / 4; }

  .mastery-card {
    position: relative;
    background: var(--card-bg);
    border: 1px solid var(--color-border);
    border-radius: 16px;
    padding: 2rem;
    text-decoration: none !important;
    color: inherit !important;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    min-height: 180px;
    overflow: hidden;
  }

  .mastery-card:hover {
    border-color: var(--color-accent) !important;
    transform: translateY(-4px);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.4);
  }

  .mastery-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(
      circle at top right,
      var(--color-accent-glow),
      transparent 70%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .mastery-card:hover::before {
    opacity: 0.1;
  }

  /* Los cards grandes tienen t√≠tulo m√°s prominente */
  .mastery-card--0 h3,
  .mastery-card--3 h3 {
    font-size: 1.3rem !important;
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .icon-container {
    background: rgba(255, 255, 255, 0.03);
    padding: 0.5rem;
    border-radius: 8px;
    border: 1px solid rgba(255, 255, 255, 0.05);
    flex-shrink: 0;
  }

  h3 {
    margin: 0 !important;
    font-size: 1.1rem !important;
    font-weight: 700 !important;
    font-family: var(--sl-font-system) !important;
    color: var(--color-text) !important;
  }

  p {
    font-size: 0.9rem !important;
    color: var(--color-text-dim) !important;
    line-height: 1.5 !important;
    margin: 0 !important;
  }

  .card-arrow {
    position: absolute;
    bottom: 1.25rem;
    right: 1.5rem;
    font-family: var(--sl-font-mono);
    color: var(--color-text-dim);
    font-size: 1.2rem;
    transition: all 0.3s ease;
  }

  .mastery-card:hover .card-arrow {
    color: var(--color-accent);
    transform: translateX(5px);
  }

  /* Responsive: 2 columnas en tablet */
  @media (max-width: 900px) {
    .mastery-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    .mastery-card--0 { grid-column: 1 / 3; }
    .mastery-card--1 { grid-column: 1 / 2; }
    .mastery-card--2 { grid-column: 2 / 3; }
    .mastery-card--3 { grid-column: 1 / 3; }
  }

  /* Responsive: 1 columna en m√≥vil */
  @media (max-width: 600px) {
    .mastery-grid {
      grid-template-columns: 1fr;
    }
    .mastery-card--0,
    .mastery-card--1,
    .mastery-card--2,
    .mastery-card--3 {
      grid-column: 1 / 2;
    }
  }
</style>
