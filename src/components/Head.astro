---
import Default from "@astrojs/starlight/components/Head.astro";

const route = Astro.locals.starlightRoute;
const title = route?.entry?.data?.title || route?.siteTitle || "Herwingx Labs";
const description =
  route?.entry?.data?.description ||
  "Tutoriales y recursos avanzados de desarrollo - Frontend, Backend y DevOps";

// OG image: solo se inyecta si el frontmatter tiene og_image
const ogImage = (route?.entry?.data as any)?.og_image as string | undefined;
---

<Default {...Astro.props}><slot /></Default>
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
{ogImage && <meta property="og:image" content={ogImage} />}
{ogImage && <meta name="twitter:image" content={ogImage} />}

<!-- Cloudflare Web Analytics -->
<Fragment
  set:html={`<script defer src="https://static.cloudflareinsights.com/beacon.min.js" data-cf-beacon='{"token": "23473c0f031540238e8c23e9773f41f5"}'></script>`}
/>
